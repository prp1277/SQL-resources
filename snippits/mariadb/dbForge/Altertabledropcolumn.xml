<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets>
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Alter Table Drop Column</Title>
      <Shortcut>AlterTableDropColumn</Shortcut>
      <Description>Alter table snippet to drop a column.</Description>
      <Author>Devart</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>column_name</ID>
          <ToolTip>column_name</ToolTip>
          <Default>column_name</Default>
        </Literal>
        <Literal>
          <ID>table_name</ID>
          <ToolTip>table_name</ToolTip>
          <Default>table_name</Default>
        </Literal>
      </Declarations>
      <Code Language="SQL (Devart)" Kind="MySql"><![CDATA[ALTER TABLE $table_name$ 
  DROP COLUMN $column_name$;
$caret$]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>