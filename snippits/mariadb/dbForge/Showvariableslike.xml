<CodeSnippets>
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Show Variables Like</Title>
      <Shortcut>ShowVariablesLike</Shortcut>
      <Description>Shows the values of MySQL system variables.</Description>
      <Author>Devart</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>pattern</ID>
          <ToolTip>pattern</ToolTip>
          <Default>pattern</Default>
        </Literal>
      </Declarations>
      <Code Language="SQL (Devart)" Kind="MySql"><![CDATA[SHOW VARIABLES LIKE '$pattern$'$caret$;]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>